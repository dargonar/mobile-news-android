<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    	<WebView
    	    xmlns:android="http://schemas.android.com/apk/res/android"
    	    android:id="@+id/my_webview_ex"
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent" />

    	<Button
    	    android:id="@+id/button1_ex"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_alignParentTop="true"
    	    android:text="Button" />

    	<CheckBox
    	    android:id="@+id/chk_zoom"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_below="@+id/button1_ex"
    	    android:text="Zoom" />

    	<CheckBox
    	    android:id="@+id/chk_viewport"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_below="@+id/chk_zoom"
    	    android:text="Wide ViewPort" />

    	<SeekBar
    	    android:id="@+id/spinner"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_below="@+id/chk_viewport"
    	    android:max="100" />
    	
</RelativeLayout>
