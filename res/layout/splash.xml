<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3479c9"
    >

    <ImageView
        android:id="@+id/img_splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_solo" />
    
    <ImageView
        android:id="@+id/img_splash_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_splash_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/refresh_loading"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
         />

    <ImageView
        android:id="@+id/img_splash_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_splash_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/warning"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />
    
    <TextView
	    android:id="@+id/txt_splash_msg"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/img_splash_loading"
	    android:layout_centerHorizontal="true"
	    android:text="[message here]"
	    android:textAppearance="?android:attr/textAppearanceMedium" 
	    android:visibility="invisible"
	    android:layout_marginTop="20dp"
	    />
    
    <Button
        android:id="@+id/btn_splash_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/txt_splash_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:text="Reintentar" />
    
</RelativeLayout>